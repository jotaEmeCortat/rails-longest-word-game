<div class="container">
  <h1 class="my-3">New game</h1>

  <ul class="d-flex gap-3 list-unstyled">
    <% @letters.each do |letter| %>
      <li class="p-3 bg-primary text-white rounded shadow"><%= letter %></li>
    <% end %>
  </ul>

  <p class="form-prefix">What is the longest word you can find?</p>

  <form action="/score" method="POST" data-turbo="false" class="row">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

    <div class="col-auto">
      <input type="text" name="word" class="form-control" id="word">
    </div>
    <div class="col-auto">
      <input type="submit" value="Play" class="btn btn-primary">
    </div>
  </form>
</div>
